{
    "name": "shawnlindstrom/expo-server-sdk-php",
    "description": "Server-side library for working with Expo using PHP",
    "keywords": [
        "expo",
        "php",
        "push notifications",
        "expo-server-sdk-php"
    ],
    "homepage": "https://github.com/shawnlindstrom/expo-server-sdk-php",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/shawnlindstrom/expo-server-sdk-php/issues",
        "source": "https://github.com/shawnlindstrom/expo-server-sdk-php"
    },
    "authors": [
        {
            "name": "Cedric Twillie",
            "email": "ctwillie77@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Shawn Lindstrom",
            "email": "shawn@tenerant.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^6|^7",
        "ext-json": "*",
        "ext-zlib": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^12.5.8"
    },
    "autoload": {
        "psr-4": {
            "ExpoSDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExpoSDK\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "cs:check": "php-cs-fixer fix --config=.php_cs.dist.php --allow-risky=yes --dry-run --diff",
        "cs:fix": "php-cs-fixer fix --config=.php_cs.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
